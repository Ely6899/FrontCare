<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoldiersRequestsPage">

    <TextView
        android:id="@+id/SoldiersRequestsPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose a donation:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/donationsTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:id="@+id/donationsTable"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:stretchColumns="0,1,2"
        app:layout_constraintTop_toBottomOf="@+id/SoldiersRequestsPageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/tablesBackgroundColor"> <!-- Set background color -->

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
